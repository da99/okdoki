#!/usr/bin/env bash
# -*- bash -*-
#
set -u -e -o pipefail


#!/usr/bin/env node
# -*- js   -*-
#

akui="public/akui.js"
settings="$@"
function re_download {
  if [[ ! "$settings" == *skip_download* ]]
  then
    rm -f "$1"
    wget -O "$1" "$2"
  fi
  # cat "$1" >> "$akui"
}

# echo "" > "$akui"
re_download "public/jquery.js"      "http://code.jquery.com/jquery-1.9.1.min.js"
re_download "public/underscore.js" "http://underscorejs.org/underscore-min.js"
re_download "public/promise.js"    "https://raw.github.com/stackp/promisejs/master/promise.min.js"
re_download "public/fermata.js"    "https://raw.github.com/natevw/fermata/master/fermata.js"

# cat public/base.js >> "$akui"

