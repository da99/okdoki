#!/usr/bin/env bash
# -*- bash -*-
#
set -u -e -o pipefail
bin/npm_link ensure_none

folder="node_modules"
mv $folder /tmp/okdoki_$folder

git checkout heroku
git merge master

rm -rf $folder
mv  /tmp/okdoki_$folder $folder

git add -f node_modules/*
stat="$(git status)"
if [[  "$stat" != *"nothing to commit, working directory clean"* ]]
then
  git add .
  git add -u
  git commit -m "npm update"
fi

git push heroku heroku:master
git checkout master


