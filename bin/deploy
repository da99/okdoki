#!/usr/bin/env bash
# -*- bash -*-
#
set -u -e -o pipefail


mv node_modules /tmp/okdoki_node_modules

git checkout heroku
git merge master
mv  /tmp/okdoki_node_modules node_modules

stat="$(git status)"
if [[  "$stat" != *"nothing to commit, working directory clean"* ]]
then
  git add .
  git add -u
  git commit -m "npm update"
fi

git push heroku heroku:master
git checkout master
git branch


